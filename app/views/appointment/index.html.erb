<div> Appointments </div>
<% if current_user.admin? %>
  <div>
  <% @appointments.each do |appt| %>
    <div class="border-red-400 border-solid border-2 w-1/3">
      <h1 class="red-400"><%= appt.created_at.strftime('%-B %-d, %Y') %></h1>
      <div><%= appt.reason %></div>
      <div><%= appt.interaction %></div>
      <div><%= appt.status %></div>
      <div><%= appt.note %></div>
    </div>
    <br>
  <% end %>
</div>
<% else %>
<div>
  <% @paid_appointments.each do |appt| %>
    <div class="border-red-400 border-solid border-2 w-1/3">
      <h1 class="red-400"><%= appt.appt_date.strftime('%-B %-d, %Y') %> | <%= appt.appt_time.strftime("%I:%M%p") %></h1>
      <div><%= appt.appt_reason %></div>
      <div><%= appt.appt_interaction %></div>
      <div><%= appt.appt_status %></div>
      <div><%= appt.appt_note %></div>
    </div>
    <br>
  <% end %>
</div>

<div>
  <% @good_appointments.each do |appointment| %>
    <%= link_to(appointment_path(appointment.id)) do %>
      <div class="border-red-400 border-solid border-2 w-1/3">
        <%= appointment.reason %>
        <br>
        <%= appointment.note %>
        <br>
        <%= appointment.status %>
        <br>
        <p> <%= appointment.interaction %> </p> 
      </div>
    <%end%>
    <br>
  <% end %>
</div>

<div>
  <% @bad_appointments.each do |appointment| %>
    <div class="border-red-400 border-solid border-2 w-1/3">
      <h1><i>This reservation has been paid by another patient. Please remove it and create another appointment.</i></h1>
      <%= appointment.reason %>
      <br>
      <%= appointment.note %>
      <br>
      <%= appointment.status %>
      <br>
      <p> <%= appointment.interaction %> </p> 
      <%= link_to "Remove", appointment_path(appointment.id), method: :delete, data: {confirm: "Continue to remove appointment?"} %>
    </div>
    <br>
  <% end %>
</div>
<% end %>