<div class="flex flex-col justify-center items-center">
  <div class="text-5xl font-bold p-6"> Appointments </div>
  <div class="text-2xl font-bold text-green-700"> Reserved Appointments </div>
  <div class="flex flex-wrap w-full justify-center items-center">
    <% @good_appointments.each do |appointment| %>
      <%= link_to(appointment_path(appointment.id), :class => "flex flex-col border-red-400 border-solid border-2 w-1/6 p-4 m-3 max-w-sm bg-white rounded-lg border border-amber-600 shadow-md hover:bg-amber-600") do %>
        <div class="flex flex-col items-center justify-center">
          <div class="uppercase font-bold text-xl"><%= appointment.reason %></div>
          <div><%= appointment.interaction %></div>
          <div class="w-4/6 uppercase font-bold text-white bg-green-700 rounded-full text-xs p-4 text-center"><%= appointment.status %></div>
        </div>
      <%end%>
    <% end %>
  </div>
  <div class="text-2xl font-bold text-amber-700"> Confirmed Appointments </div>
  <div class="flex flex-wrap">
    <div></div>
    <% @paid_appointments.each do |appt| %>
      <div class="flex flex-col items-center justify-center border-red-400 border-solid border-2  p-4 m-3 bg-white rounded-lg border border-amber-600 shadow-md hover:bg-amber-600">
        <h1 class="red-400"><%= appt.appt_date.strftime('%-B %-d, %Y') %> | <%= appt.appt_time.strftime("%I:%M%p") %></h1>
        <div class="flex justify-center uppercase font-bold text-xl"><%= appt.appt_reason %></div>
        <div><%= appt.appt_interaction %></div>
        <div class="w-4/6 uppercase font-bold text-white bg-green-700 rounded-full text-xs p-4 text-center"><%= appt.appt_status %></div>
      </div>
      <br>
    <% end %>
  </div>
  <div class="text-2xl font-bold text-red-700"> Expired Appointments </div>
  <div class="flex flex-wrap justify-center items-center">
    <% @bad_appointments.each do |appointment| %>
      <div class="flex flex-col items-center justify-center border-red-400 border-solid border-2 w-1/6 p-4 m-3 bg-white rounded-lg border border-amber-600">
        <h1 class="text-sm text-justify text-red-500"><i>This reservation has been paid by another patient. Please remove it and create another appointment.</i></h1>
        <div class="flex justify-center uppercase font-bold text-xl"><%= appointment.reason %></div>
        <div>
        <%= link_to "Remove", appointment_path(appointment.id), method: :delete, data: {confirm: "Continue to remove appointment?"}, class: "inline-flex items-center py-2 px-3 text-sm font-medium text-center text-white bg-red-700 rounded-lg hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-blue-300" %>
        </div>
      </div>
      <br>
    <% end %>
  </div>
</div>