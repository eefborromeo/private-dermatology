<div class='flex justify-center content-center text-center flex-col w-auto'>
  <div class='font-bold pt-64 pb-10 text-5xl'> New Appointment </div>
  <div class='flex w-96 justify-center content-center self-center'>
    <%= form_with model: @appointment, url: appointment_index_path do |form| %>
      <div class="category-detail-list">
        <div class="category-add">
          <div class="field">
            <%= form.label :reason, class: "text-left font-bold"%></br>
            <%= form.text_field :reason, class: "block border-1 border-black" %>
          </div>
        </div>
        <div class="category-add">
          <div class="field"></br>
            <%= form.hidden_field :slot_id, value: @slot.id %>
            <%= form.hidden_field :user_id, value: current_user.id %>
          </div>
        </div>
      <div class="submit"></br>
        <button class='text-xl font-bold bg-cyan-500 uppercase p-1 rounded-2xl border-2 border-solid border-black w-48'><%= form.submit "Submit", class: "button-form" %></button>
      </div>
    <% end %>
  </div>
</div>