<h1>Inventory</h1>
<%= link_to "Add Product", new_admin_inventory_path %>
<table class="table-fixed">
    <thead>
        <tr>
            <th>Product Image</th>
            <th>Product Name</th>
            <th>Quantity</th>
            <th>Actions</th>
        </tr>
    <thead>
    <tbody>
        <% @products.each do |product|%>
            <tr>
                <td><%= image_tag product.product_image.variant(resize_to_limit: [nil, 80]) %></td>
                <td><%= product.product_name %></td>
                <td><%= product.stocks %></td>
                <td>
                    <%= link_to "Edit", edit_admin_inventory_path(product) %>
                    <%= link_to "Delete", admin_inventory_path(product), method: :delete, data: { confirm: 'Are you sure?' } %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>