<div class="m-20 flex flex-col items-center justify-center ">
  <div class="w-1/4 flex flex-col items-center justify-center border-black border-solid border-2">
    <div class="p-10 text-3xl font-bold">Log in</div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'flex flex-col justify-center items-center'}) do |f| %>
      <div class="field">
        <%= f.label :email, class: "text-xs font-bold" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password, class: "text-xs font-bold" %><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex p-4 text-sm items-center">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: "px-2" %>
        </div>
      <% end %>

      <div class="flex items-center justify-center w-20 bg-slate-900 py-2 px-4 text-slate-50 rounded-full hover:bg-amber-600 hover:text-black font-bold">
        <%= f.submit "Log in" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
