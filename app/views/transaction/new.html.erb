<div class="flex flex-col justify-center items-center">
  <div class="text-5xl font-bold p-6"> Payment </div>
<div class="flex flex-wrap">
  <% @data.each do |each| %>
    <div class="flex flex-col items-center justify-center border-red-400 border-solid border-2  p-4 m-3 bg-white rounded-lg border border-amber-600">
      <h1 class="font-bold"> <%= each[:name] %> </h1>
      <div>
        <div>Price: <%= each[:price] %> </div>
        <div>Quantity: <%= each[:quantity] %> </div>
        <div>Total: <%= each[:total] %> </div>
      </div>
    </div>  
  <%end%>
</div>
<div class="uppercase text-white bg-green-700 p-4 mb-6 text-center">
  <h1 class="text-xs">The overall checkout total</h1>
  <div class="text-xl font-bold "><%= @checkout_total %></div>
</div>
  <%= form_with url: payments_gcash_payment_path, method: :post do |form| %>
    <div class="text-white bg-[#2557D6] hover:bg-[#2557D6]/90 focus:ring-4 focus:ring-[#2557D6]/50 focus:outline-none font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center dark:focus:ring-[#2557D6]/50 mr-2 mb-2">
      <%= form.hidden_field :amount, value: @checkout_total %>
      <%= form.hidden_field :payment_category, value: "Dermatology Product Payment" %>
      <%= image_tag("gcash.png", class: "w-9 h-9")%>
      <%= form.submit "Pay with GCash" %>
    </div>
  <% end %>
</div>