<%= link_to "Home", root_path %>
<br>
<h1>This is Patient Transaction Index</h1>
<br>
<br>
<% @appointment_transactions.each do |appt| %>
  <div class="border-solid border-4 border-red-400 w-1/3">
    <h1 class="red-400"><%= appt.appt_date.strftime('%-B %-d, %Y') %> | <%= appt.appt_time.strftime("%I:%M%p") %></h1>
    <div><%= appt.appt_reason %></div>
    <div><%= appt.appt_note %></div>
    <div><%= appt.appt_interaction %></div>
  </div>
  <br>
<%end%>
<br>
<% @product_transactions.each do |t| %>
  <div class="border-solid border-4 border-red-400 w-1/3">
    <h1 class="red-400"><%= t.prod_name %></h1>
    <div><%= t.prod_desc %></div>
    <div>Price <%= t.prod_price %></div>
    <div>Quantity <%= t.prod_quantity %></div>
    <div>Total <%= t.prod_total %></div>
  </div>
  <br>
<%end%>