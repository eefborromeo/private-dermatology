  <div class="text-center text-5xl font-bold p-6"> Patients </div>
<div class="flex flex-wrap justify-center items-center">
  <% @users.each do |user| %>
  <div class="flex justify-center items-center">
    <% if user.admin == false %>
      <div class="flex flex-col border-2 border-solid border-amber-600 p-3 m-3">
        <div class="flex justify-center"><%= image_tag("default.png", class: "w-20 h-20") %></div>
        <div>Name: <%= user.full_name %></div>
        <div>Email: <%= user.email %></div>
        <div>Address: <%= user.address %></div>
        <div>Gender: <%= user.gender %></div>
        <div>Date of Birth: <%= user.dob.strftime('%-B %-d, %Y') %></div>
        <div>Contact Number:<%= user.contact_no %></div>
      </div>
    <% end %>
  </div>
  <% end %> 
</div>
